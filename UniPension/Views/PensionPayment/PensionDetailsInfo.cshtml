        <h4>Pensioner Dues Info</h4>
        <div class="row table-responsive">
            <table class="table">
                <tr>
                    <th>
                        Install_No
                    </th>
                    <th>
                        Due_Amount
                    </th>
                    <th>
                        Fine_Amount
                    </th>
                    <th>
                        Total_Due
                    </th>
                    <th>
                        Payment_Currency
                    </th>
                    <th>
                        Due_Date
                    </th>
                </tr>
                @if (Model.Due_Installments != null)
                {
                    foreach (var item in Model.Due_Installments)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Install_No)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Due_Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fine_Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total_Due)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Payment_Currency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Due_Date)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            No dues..
                        </td>
                    </tr>
                }
            </table>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-offset-5 col-md-6">
                <input type="submit" value="Confirm Payment" class="btn btn-primary" />
            </div>
        </div>
