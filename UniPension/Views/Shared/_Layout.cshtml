<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BKB-Uni Pension</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/scripts/jquery-2.0.0.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery.dataTables.min.js"></script>
    <script src="~/scripts/dataTables.bootstrap4.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["LoginCredentials"] != null)
                {
                    @Html.ActionLink("BKB-UniPension", "Welcome", "Login", new { area = "" }, new { @class = "navbar-brand" })
                    <img src="~/Images/logo.png" class="img-center" height="50" width="50" />
                }
                else
                {
                    @Html.ActionLink("BKB-UniPension", "Index", "Login", new { area = "" }, new { @class = "navbar-brand" })
                    <img src="~/Images/logo.png" class="img-center" height="50" width="50" />
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.Partial("_MenuPartial")
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["LoginCredentials"] != null)
                    {
                        var loginDetails = (UniPension.Models.LoginModels)Session["LoginCredentials"];
                        <li style="color:green;font-weight:bold;">@loginDetails.userName</li>
                        <li>@Html.ActionLink("Logout", "LogOff", "Login")</li>
                        <li><span class="glyphicon-log-out"></span></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                        <li><span class="glyphicon-log-out"></span></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="background:#9bc5c3">
        @RenderBody()
    </div>

    <div class="container" style="background:#9bc5c3; align-items:center;font-weight:bold;">
        <hr />
        <footer>
            <p>&copy; 2022-@DateTime.Now.Year - UniPension collection System(Version 1.0). Developed By ICT Operation Dept., BKB</p>
        </footer>
    </div>

</body>
</html>